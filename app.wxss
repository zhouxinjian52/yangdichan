/**app.wxss**/

page {
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    font-size: 10pt;
    width: 100%;
    height: 100%;
    position: relative;
}

.container {
    width: 100%;
    height: 100%;
    position: relative;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.swiper-container {
    width: 100%;
    height: 100%;
}

.tab-box {
    position: fixed;
    bottom: 50rpx;
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
    background: #fff;
    border-radius: 60rpx;
    left: 50%;
    margin-left: -130rpx;
    padding: 10rpx 20rpx;
    box-shadow: 0 3px 15px #b1b1b1;
    z-index: 99;
}

.tab-module {
    flex: 1;
    width: 110rpx;
    height: 40rpx;
    color: #b1b1b1;
    line-height: 40rpx;
    text-align: center;
    border-right: 2px solid #e5e5e5;
}

.tab-module:last-child {
    border-right: none;
}

.tab-current {
    color: #66a6ff;
}