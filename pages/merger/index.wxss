/* merger.wxss */

.merger-list {
    display: flex;
    margin-top: 30rpx;
    flex-direction: row;
    box-sizing: border-box;
}

.flex-module {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    font-size: 28rpx;
    padding: 20rpx 0;
    border-bottom: 1px solid #eee;
}

.flex-module2 {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    font-size: 28rpx;
}

.flex-label {
    flex: 1;
    color: #030303;
    padding-left: 20rpx;
}

.flex-input {
    flex: 2;
    justify-content: flex-end;
}

.flex-select {
    flex: 1.3;
    color: #cccccc;
    margin-left: 20rpx;
    justify-content: flex-end;
}

.flex-input-dom {
    text-align: right;
    padding: 0 10rpx;
    font-size: 28rpx;
}

.phcolor {
    color: #cccccc;
}

.flex-unit {
    width: 60rpx;
    font-size: 20rpx;
    color: #b2b2b2;
    justify-content: flex-end;
}

.flex-icon {
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.merger-more-title {
    text-align: left;
    margin-top: 40rpx;
    font-size: 38rpx;
    padding: 16rpx 20rpx;
    box-sizing: border-box;
}

.merger-list-area {
    display: flex;
    padding: 20rpx 0;
    margin-top: 10rpx;
    flex-direction: row;
    box-sizing: border-box;
}

.flex-area-label {
    width: 120rpx;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
}

.flex-area-price {
    flex: 1;
    display: flex;
    align-items: center;
    flex-direction: row;
    box-sizing: border-box;
    margin-left: 40rpx;
}

.no-margin {
    margin: 0;
}

.flex-left {
    text-align: left;
}

.hasBottomLine {
    border-bottom: 1px solid #eee;
}

.look-more-list {
    color: #09bb07;
    margin-top: 30rpx;
    margin-bottom: 100rpx;
    text-align: right;
    font-size: 26rpx;
}

.merger-unit {
    white-space: nowrap;
    font-size: 22rpx;
}

.start-btn {
    border: none;
    color: #fff;
    font-size: 30rpx;
    line-height: 98rpx;
    background: linear-gradient(to left, #47b4d3, #4f74b3);
}

.start-btn-view {
    color: #999;
    text-align: center;
    font-size: 30rpx;
    line-height: 80rpx;
}


/* 主容器 */

.stepper {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: center;
}


/* 加号和减号 */

.stepper text {
    width: 20px;
    line-height: 20px;
    text-align: center;
    float: left;
    border: 1px solid #eee;
}


/* 数值 */

.stepper input {
    width: 40px;
    line-height: 20px;
    font-size: 12px;
    text-align: center;
    color: #b2b2b2;
}


/* 普通样式 */

.stepper .normal {
    color: #b2b2b2;
}


/* 禁用样式 */

.stepper .disabled {
    color: #eee;
}