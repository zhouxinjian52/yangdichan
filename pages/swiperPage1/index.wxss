.swiper-content {
    width: 100%;
    height: 100%;
}

.swiper-view {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    position: relative;
    background: linear-gradient(to bottom, #143163, #3f6398);
    padding-bottom: 50px;
}

.image-icon {
    width: 26rpx;
    height: 26rpx;
    position: relative;
    top: 4rpx;
    margin-right: 10rpx;
}

.swiper-view-number {
    flex: 1;
    display: flex;
    /* justify-content: center; */
    align-items: center;
    flex-direction: column;
}

.view-title {
    font-size: 24rpx;
    color: #9ca7bb;
}

.view-val {
    font-size: 72rpx;
    margin-top: 10rpx;
    color: #fff;
}

.swiper-view-canvas {
    flex: 4;
    position: relative;
    width: 100%;
}

.canvasArcCir{
    width: 100%;
    box-sizing: border-box;
    position: absolute;
    text-align: center;
    left: 0;
}

.evaluation {
    position: absolute;
    width: 100%;
    text-align: center;
    color: #fff;
    font-size: 42rpx;
    top: 28%;
}

.proportion {
    position: absolute;
    text-align: center;
    width: 100%;
    color: #fff;
    font-size: 100rpx;
    top: 37%;
}

.sign-icon {
    font-size: 36rpx;
}

.rateTitle {
    position: absolute;
    width: 100%;
    color: #9ca7bb;
    font-size: 24rpx;
    top: 56%;
    text-align: center;
}